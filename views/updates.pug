doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 Update Custom Object
    a(href="/") Return to the homepage

form(action="/update-cobj", method="POST")
  div
    label(for="name") Name
    input(type="text", name="name", id="name", required=true)
  div
    label(for="device") Device  
    input(type="text", name="device", id="device")
  div
    label(for="value") Value
    input#value.currency-input(
        type="number"
        name="value"
        min="0"
        step="0.01"
        )

  button(type="submit") Create record

